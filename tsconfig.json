{
    "compilerOptions": {
        "module": "es6",
        "target": "es2015",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "declarationDir": "./dist/typing",
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "moduleResolution": "node",
        "lib": [
            "webworker",
            "es6",
            "es5",
            "dom"
        ],
        "types": [
            "node"
        ],
        "paths": {}
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}